<%= link_to "<<<", groups_path %>
<% if can? :read, @group %>
  <%= link_to "Edit this category", edit_group_path(@group) %> |
  <%= button_to "Destroy this category", @group, method: :delete %>
  
  <%= render @group %>

  <div class="payments-container">
    <% @payments.each do |payment| %>
      <%= link_to group_payment_path(@group.id, payment.id) do %>
        <div class="payments-item">
          <p><%= payment.name %></p>
          <p>$<%= payment.amount %></p>
        </div>
      <% end %> 
    <% end %> 
  </div>

  <div>
    <%= button_to "Add transaction", new_group_payment_path(@group.id), method: :get %>
  </div>
<%end%>