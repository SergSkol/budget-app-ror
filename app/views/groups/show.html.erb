<nav class="group-header"> 
  <%= link_to "BACK", groups_path, class: "link-header" %>
  <%= link_to "EDIT", edit_group_path(@group), class: "link-header" %>
  <%= button_to "REMOVE", @group, method: :delete, class: "btn-header" %>
</nav>

<%= render @group %>

<div class="payments-index">
  <div class="payments-container">
    <% @payments.each do |payment| %>
      <%= link_to group_payment_path(@group.id, payment.id), class: "group-link" do %>
        <div class="payments-item">
          <div class="payment-info">
            <p><%= payment.name %></p>
            <p><%= payment.created_at %></p>
          </div>
          <p>$<%= payment.amount %></p>
        </div>
      <% end %> 
    <% end %> 
  </div>
</div>

<div>
  <%= button_to "ADD TRANSACTION", new_group_payment_path(@group.id), method: :get, class: "btn-bottom" %>
</div>
