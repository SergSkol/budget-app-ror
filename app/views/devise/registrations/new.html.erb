<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <nav class="group-header">
    <%= link_to "BACK", unauthenticated_root_url, class: "link-header" %>
    <p></p>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn-header" %>
    </div>
  </nav>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password again" %>
  </div>
<% end %>
